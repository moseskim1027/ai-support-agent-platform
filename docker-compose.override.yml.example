# docker-compose.override.yml
# This file is for local development overrides
# Copy to docker-compose.override.yml and customize for your local setup
# Docker Compose automatically applies this file when running docker-compose up

version: '3.8'

services:
  backend:
    # Enable hot reload for local development
    volumes:
      - ./backend:/app
    command: uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload

    # Expose debugger port for IDE integration
    ports:
      - "8000:8000"
      - "5678:5678"  # Python debugger port
