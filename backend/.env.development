# Development Environment
# This file contains safe defaults for local development
# Copy to .env and update with your actual API keys

ENVIRONMENT=development
LOG_LEVEL=debug
DEBUG=true

# API Keys - ADD YOUR REAL KEYS HERE
OPENAI_API_KEY=sk-your-openai-api-key-here

# Security (safe for local dev)
# For production, generate a secure key with: openssl rand -hex 32
SECRET_KEY=dev-secret-key-only-for-local-development
CORS_ORIGINS=*

# Service Ports
BACKEND_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_support

# Redis
REDIS_DB=0

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3001
